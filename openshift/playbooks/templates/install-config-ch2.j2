additionalTrustBundlePolicy: Proxyonly
apiVersion: v1
baseDomain: {{ base_domain }}
compute:
- architecture: amd64
  hyperthreading: Enabled
  name: worker
  platform:
    openstack:
      type: s3.xlarge.4
      rootVolume:
        size: 100
        type: SSD
  replicas: 0 # create the compute nodes manually
controlPlane:
  architecture: amd64
  hyperthreading: Enabled
  name: master
  platform:
    openstack:
      type: s3.xlarge.4
      zones:
        - eu-ch2a
        - eu-ch2b
      rootVolume:
        size: 100
        type: SSD
  replicas: 3
metadata:
  creationTimestamp: null
  name: {{ cluster_name }}
networking:
  clusterNetwork:
  - cidr: {{ cluster_network }}
    hostPrefix: 23
  machineNetwork:
  - cidr: {{ machine_network }}
  networkType: {{ network_type }}
  serviceNetwork:
  - {{ service_network }}
platform:
  openstack:
    clusterOSImage: {{ cluster_os_image }}
    apiFloatingIP: {{ api_floating_ip }}
    apiVIPs:
    - {{ api_vip }}
    cloud: otc
    defaultMachinePlatform:
      type: s3.xlarge.4
    externalDNS: null
    externalNetwork: admin_external_net
    ingressVIPs:
    - 10.0.0.7  # fixed input
publish: External
pullSecret: '{{ pull_secret | tojson }}'
sshKey: '{{ ssh_public_key }}'